{
  "version": 2,
  "builds": [
    {
      "src": "frontend_reconstruction/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://translatoragent-production.up.railway.app",
    "VITE_ENABLE_API_INTEGRATION": "true"
  }
}
