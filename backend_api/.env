# 后端 API 配置
PORT=8000
NODE_ENV=development

# CORS 配置
CORS_ORIGIN=http://localhost:3000,https://translator-agent-*.vercel.app

# API 配置
API_VERSION=v1
API_PREFIX=/api

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_MAX_FILES=10

# 日志配置
LOG_LEVEL=info

# 安全配置
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100

# 数据库配置（演示使用内存，生产环境可配置 Redis/MongoDB）
DB_TYPE=memory

# 任务处理配置
TASK_PROCESSING_INTERVAL=500  # 毫秒
TASK_PROCESSING_TIMEOUT=30000  # 30秒

# 文件存储路径
UPLOAD_DIR=./uploads

# 会话配置
SESSION_SECRET=translator-agent-secret-key-2026

# API 密钥（可选，用于生产环境）
API_KEY=translator-agent-api-key-2026

# 监控配置
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=7